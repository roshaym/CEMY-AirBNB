<div class="container">
  <%= form_with(model: @property, local: true, class: "needs-validation", novalidate: true) do |form| %>
    <div class="form-group mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :price_per_night, class: "form-label" %>
      <%= form.number_field :price_per_night, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :address, class: "form-label" %>
      <%= form.text_field :address, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :image, class: "form-label" %>
      <%= form.file_field :image, class: "form-control", accept: 'image/png,image/jpeg,image/jpg' %>
    </div>

    <%= form.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>