<h1 class="mb-4">Create New Property</h1>

<div class="container">
  <%= form_with(model: @property, local: true, class: "needs-validation", novalidate: true) do |form| %>
    <div class="form-group mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :price_per_night, class: "form-label" %>
      <%= form.number_field :price_per_night, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :location, class: "form-label" %>
      <%= form.text_field :location, class: "form-control" %>
    </div>

    <%= form.submit "Create property", class: "btn btn-success" %>
  <% end %>
</div>
