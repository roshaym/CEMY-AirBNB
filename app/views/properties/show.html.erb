<h1 class="mb-4"><%= @property.name %></h1>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <img src="https://via.placeholder.com/500" class="img-fluid mb-3" alt="Property image">
    </div>
    <div class="col-md-6">
      <h3>Description</h3>
      <p><%= @property.description %></p>
      <h4>Price: $<%= @property.price_per_night %></h4>
      <h5>Location: <%= @property.location %></h5>
      <a href="<%= edit_property_path(@property) %>" class="btn btn-warning mt-3">Edit Property</a>
      <%= link_to 'Back to Properties', properties_path, class: 'btn btn-secondary mt-3' %>
    </div>
  </div>
</div>
