<div class="cover mb-4 d-flex align-items-center justify-content-center">
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">List of all our properties</h3>
    <%= link_to "Create property", new_property_path, class: "btn btn-flat" %>
  </div>
  <div class="row">
    <% @properties.each do |property| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to property_path(property), class:"text-decoration-none" do %>
          <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)) %>)">
            <%= property.name %>
            <%= property.location %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
