<h1 class="mb-4">Edit property</h1>

<div class="container">
  <%= form_with(model: @property, local: true, class: "needs-validation", novalidate: true) do |form| %>
    <div class="form-group mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :price_per_night, class: "form-label" %>
      <%= form.number_field :price_per_night, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :address, class: "form-label" %>
      <%= form.text_field :address, class: "form-control" %>
    </div>

    <%= form.submit "Update Listing", class: "btn btn-primary" %>
  <% end %>
</div>
