<h1>Airbnb</h1>
<p>Find a place to stay</p>

<form novalidate="novalidate" class="simple_form search" action="<%= properties_path %>" accept-charset="UTF-8" method="get">
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="query" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat" properties_path>
      <i class="fas fa-search"></i> Search
    </button>
  </div>
</form>

  <div>
    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
