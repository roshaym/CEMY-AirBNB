<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm my-5">
        <div class="card-body p-4 text-center">
          <%= image_tag asset_path("logo.png"), class: "mb-4", style: "max-width: 150px; height: auto;" %>
          
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), 
              html: { class: 'needs-validation', novalidate: true }) do |f| %>
            
            <% if f.error_notification.present? %>
              <div class="alert alert-danger">
                <%= f.error_notification %>
              </div>
            <% end %>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.input :first_name,
                    required: true,
                    input_html: { 
                      autocomplete: "given-name", 
                      class: 'form-control', 
                      placeholder: 'First Name' 
                    },
                    label: false %>
              </div>
              <div class="col-md-6 mb-3">
                <%= f.input :last_name,
                    required: true,
                    input_html: { 
                      autocomplete: "family-name", 
                      class: 'form-control', 
                      placeholder: 'Last Name' 
                    },
                    label: false %>
              </div>
            </div>

            <div class="form-group mb-3">
              <%= f.input :email,
                  required: true,
                  input_html: { 
                    autocomplete: "email", 
                    class: 'form-control', 
                    placeholder: 'Email Address' 
                  },
                  label: false %>
            </div>

            <div class="form-group mb-3">
              <%= f.input :password,
                  required: true,
                  input_html: { 
                    autocomplete: "new-password", 
                    class: 'form-control', 
                    placeholder: 'Password' 
                  },
                  label: false %>
              <small class="form-text text-muted">
                <% if @minimum_password_length %>
                  <%= @minimum_password_length %> characters minimum
                <% end %>
              </small>
            </div>

            <div class="form-group mb-3">
              <%= f.input :password_confirmation,
                  required: true,
                  input_html: { 
                    autocomplete: "new-password", 
                    class: 'form-control', 
                    placeholder: 'Confirm Password' 
                  },
                  label: false %>
            </div>

            <div class="d-grid">
              <%= f.button :submit, "Sign Up", class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Client-side form validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      
      Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>