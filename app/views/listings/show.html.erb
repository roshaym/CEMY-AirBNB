<h1 class="mb-4"><%= @listing.title %></h1>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <img src="https://via.placeholder.com/500" class="img-fluid mb-3" alt="Listing image">
    </div>
    <div class="col-md-6">
      <h3>Description</h3>
      <p><%= @listing.description %></p>
      <h4>Price: $<%= @listing.price %></h4>
      <h5>Location: <%= @listing.location %></h5>
      <a href="<%= edit_listing_path(@listing) %>" class="btn btn-warning mt-3">Edit Listing</a>
      <%= link_to 'Back to Listings', listings_path, class: 'btn btn-secondary mt-3' %>
    </div>
  </div>
</div>
