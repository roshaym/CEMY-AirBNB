<h1 class="mb-4">Listings</h1>

<!-- Container for the buttons -->
<div class="container mb-4">
  <div class="d-flex">
    <!-- Button to navigate to the new listing page -->
    <%= link_to 'Add New Listing', new_listing_path, class: 'btn btn-primary me-3' %>
    <!-- Button to navigate to the landing page -->
    <%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <img src="https://via.placeholder.com/300" class="card-img-top" alt="Listing image">
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text"><%= listing.description.truncate(100) %></p>
            <p class="card-text"><strong>Price:</strong> $<%= listing.price %></p>
            <a href="<%= listing_path(listing) %>" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
