<h1 class="mb-4">Create New Listing</h1>

<div class="container">
  <%= form_with(model: @listing, local: true, class: "needs-validation", novalidate: true) do |form| %>
    <div class="form-group mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :price, class: "form-label" %>
      <%= form.number_field :price, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :location, class: "form-label" %>
      <%= form.text_field :location, class: "form-control" %>
    </div>

    <%= form.submit "Create Listing", class: "btn btn-success" %>
  <% end %>
</div>
