<!-- app/views/users/show.html.erb (or app/views/users/profile.html.erb) -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0"><%= @user.first_name %> User's Profile</h3>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4 text-center">
              <% if @user.avatar.attached? %>
                <%= image_tag @user.avatar, class: "img-thumbnail rounded-circle", style: "width: 150px; height: 150px;" %>
              <% else %>
                <div class="placeholder-avatar bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center"
                     style="width: 150px; height: 150px;">
                  <i class="bi bi-person-circle" style="font-size: 3rem;"></i>
                </div>
              <% end %>
            </div>
            <div class="col-md-8">
              <p class="mb-1"><strong>First Name:</strong> <%= @user.first_name %></p>
              <p class="mb-1"><strong>Last name:</strong> <%= @user.last_name %></p>
              <p class="mb-1"><strong>Email:</strong> <%= @user.email %></p>
            </div>
          </div>
        </div>
        <div class="card-footer text-end">
          <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-success" %> 
        </div>
      </div>
    </div>
  </div>
</div>
