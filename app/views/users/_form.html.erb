
<%= form_with model: @user, local: true, html: { class: "needs-validation", novalidate: true } do |f| %>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="card shadow">
          <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Edit Profile</h3>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <%= f.label :first_name, class: "form-label" %>
              <%= f.text_field :first_name, class: "form-control", placeholder: "Enter your  first name", required: true %>
            </div>
            <div class="mb-3">
              <%= f.label :last_name, class: "form-label" %>
              <%= f.text_field :last_name, class: "form-control", placeholder: "Enter your  last name", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :avatar, class: "form-label" %>
              <%= f.file_field :avatar, class: "form-control" %>
            </div>
          </div>
          <div class="card-footer text-end">
            <%= f.submit "Edit Profile", class: "btn btn-success" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
